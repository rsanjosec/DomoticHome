<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1>Listado de dispositivos</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <div class="btn-group mr-2">
                <button class="btn btn-sm btn-outline-secondary">Share</button>
                <button class="btn btn-sm btn-outline-secondary">Export</button>
            </div>
            <button class="btn btn-sm btn-outline-secondary dropdown-toggle">
                <span data-feather="calendar"></span>
                This week
            </button>
        </div>
    </div>
  
    <div id="contData" >
        <div id="contResult" >
            <div class="row">
                <div class="col">Resultado de la operaci贸n:   </div>
                <div id="btn-up-down" class="col text-right"><span data-feather="arrow-down-circle"></span>  <span data-feather="arrow-up-circle"></span></div>     
            </div>
            <div id="contResultText" class="row"></div>                 
        </div>
      
        <table id="tbDevices" class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nombre del dispositivo</th>
                    <th scope="col">Mac Adress</th>
                    <th scope="col">Ubicaci贸n</th>
                    <th scope="col">Descripci贸n</th>
                    <th scope="col">Tipo de dispositivo</th>
                    <th scope="col">Acci贸n</th>
                </tr>
            </thead>
            <tbody>
                {{#each devices}}
                <tr>
                    <th scope="row">
                        <input disabled="disabled" type="text" name="row" id="row_{{@index}}" value="{{_id}}" style="display:none" >{{@index}}
                    </th>
                    <td data-field="device_name">{{device_name}} </td>
                    <td data-field="mac_address">{{mac_address}}</td>
                    <td data-field="place">{{place}}</td>
                    <td data-field="description">{{description}}</td>
                    <td data-field="device_type">{{device_type}}</td>
                    <td>
                        <button id="btn_delete_{{@index}}" type="button" class="btn btn-danger btn-sm btnDelete">
                            <span data-feather="trash"></span>
                            <span>Borrar</span>
                        </button>
                        <button id="btn_edit_{{@index}}" type="button" class="btn btn-primary btn-sm btnEdit"> <span data-feather="edit"></span>
                            <span>Editar</span>
                        </button>

                    </td>
                </tr>
                {{/each}}

            </tbody>
        </table>
    </div>


</main>